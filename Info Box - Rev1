    <script> //tgh stat
        var sliderToolcreate = function(event, ui) {
            if(typeof ui.value === 'undefined'){
                ui.value = 0;
            }
            var tooltip = '<div class="tooltip"><div class="tooltip-inner">'
            +  ui.value + '</div><div class="tooltip-arrow"></div></div>';
